- if user_signed_in?
  - if like.present?
    = button_to prototype_like_path(like, prototype_id: prototype.id), method: :delete, class: "btn btn-default", id: "js-likes-button", data: {disable_with: "sending now..."}, remote: true do
      = image_tag("/images/icon_red_heart.svg")
      LIKE
      %span.num= prototype.likes_count
  - else
    = button_to prototype_likes_path(prototype), method: :post, class: "btn btn-default", id: "js-likes-button", data: {disable_with: "sending now..."}, remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num= prototype.likes_count
- else
  = image_tag("icon_heart.svg")
  LIKE
  %span.num= prototype.likes_count
