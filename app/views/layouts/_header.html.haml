.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    = button_tag type: 'button', data: { toggle: 'collapse', target: '.navbar-responsive-collapse', class: 'navbar-toggle' } do
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to '/', class: 'navbar-brand' do
      = image_tag "logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px", class: "navbar-brand"
    .navbar-collapse.collapse.navbar-responsive-collapse
      -unless user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li
            .btn.btn-primary.navbar-btn
              = link_to 'Get Started', new_user_session_path
      -else
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to '', '#', area: { expanded: false }, data: { toggle: 'dropdown' }, role: 'button', class: 'dropdown-toggle' do
              = current_user.nickname
              %span.caret
            %ul.dropdown-menu{ role: 'menu' }
              %li
                = link_to 'My Page', user_path(current_user)
              %li
                = link_to 'Profile Edit', edit_user_password_path(current_user)
              %li
                = link_to'Logout', destroy_user_session_path, method: :delete
          %li
            .btn.btn-primary.navbar-btn
              = link_to 'New Proto', '/prototypes/new'
