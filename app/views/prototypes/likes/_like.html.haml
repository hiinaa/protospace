#js-like-buttons
  - if user_signed_in?
    - if prototype.liked_by?(current_user.id)
      = button_to prototype_like_path(like, prototype_id: prototype.id), method: :delete, class: "btn btn-default", remote: true do
        = image_tag("/images/icon_red_heart.svg")
        LIKE
        %span.num= prototype.likes_count
    - else
      = button_to prototype_likes_path(prototype), method: :post, class: "btn btn-default", remote: true do
        = image_tag("icon_heart.svg")
        LIKE
        %span.num= prototype.likes_count
  - else
    = image_tag("icon_heart.svg")
    LIKE
    %span.num= prototype.likes_count
